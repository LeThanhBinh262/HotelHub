@model HotelHub.Models.Room

<h2>Room Details</h2>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Type
        </dt>
        <dd class="col-sm-10">
            @Model.RoomType
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Availability
        </dt>
        <dd class="col-sm-10">
            @(Model.IsAvailable ? "Available" : "Not Available")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
<div>
    <a asp-action="Create" asp-controller="Booking" asp-route-roomId="@Model.Id" class="btn btn-primary">Book Now</a>
</div>